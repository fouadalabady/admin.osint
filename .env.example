# Authentication Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-key-at-least-32-chars

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# GraphQL Configuration
NEXT_PUBLIC_GRAPHQL_ENDPOINT=http://localhost:3000/api/graphql
GRAPHQL_SERVER_SECRET=your-graphql-server-secret
NEXT_PUBLIC_APOLLO_CLIENT_LOG_LEVEL=info # debug, info, warn, error

# Email Configuration (SMTP)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password
EMAIL_FROM=noreply@example.com

# reCAPTCHA Configuration
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# Localization
NEXT_PUBLIC_DEFAULT_LOCALE=en
NEXT_PUBLIC_AVAILABLE_LOCALES=en,ar

# Dashboard Configuration
NEXT_PUBLIC_DASHBOARD_TITLE="OSINT Dashboard"
NEXT_PUBLIC_COMPANY_NAME="Your Company"

# Rich Text Editor Configuration
NEXT_PUBLIC_ENABLE_COLLABORATIVE_EDITING=false
NEXT_PUBLIC_MAX_UPLOAD_SIZE=5242880 # 5MB in bytes
NEXT_PUBLIC_ALLOWED_UPLOAD_TYPES=image/jpeg,image/png,image/gif,image/svg+xml

# Vercel Deployment Configuration
VERCEL_TOKEN=your-vercel-token
VERCEL_PROJECT_ID=your-vercel-project-id
VERCEL_TEAM_ID=your-vercel-team-id
VERCEL_WEBHOOK_SECRET=your-vercel-webhook-secret

# Application
NODE_ENV=development
APP_URL=http://localhost:3000
API_URL=http://localhost:3000/api
NODE_NO_WARNINGS=1 # Suppress Node.js warnings

# Development Settings
NEXT_PUBLIC_VERCEL_ENV=development # development, preview, production