{
  "name": "osint-dashboard",
  "buildPack": "nodejs",
  "nodejs": {
    "version": "18"
  },
  "commands": {
    "install": "npm ci",
    "build": "npm run coolify-build",
    "start": "npm start"
  },
  "environment": {
    "NODE_ENV": "production",
    "NEXT_TELEMETRY_DISABLED": "1",
    "SKIP_ESLINT": "true",
    "SKIP_TYPECHECK": "true"
  },
  "ports": [
    {
      "port": 3000,
      "protocol": "http",
      "public": true
    }
  ],
  "persistentStorage": [
    {
      "path": ".next/cache",
      "name": "next-cache"
    }
  ],
  "healthCheck": {
    "path": "/api/health",
    "port": 3000
  },
  "resources": {
    "cpu": 1,
    "memory": 1024
  },
  "deployment": {
    "cache": true,
    "restartOnFailure": true,
    "removeOldVersions": true
  }
}
