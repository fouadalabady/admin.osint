{
  "name": "osint-dashboard",
  "buildPack": "nodejs",
  "nodeVersion": "18",
  "installCommand": "npm ci",
  "buildCommand": "npm run build",
  "startCommand": "npm start",
  "environment": {
    "NODE_ENV": "production",
    "NEXT_TELEMETRY_DISABLED": "1"
  },
  "ports": {
    "expose": 3000
  },
  "persistentStorage": [
    {
      "mountPath": "/app/.next/cache",
      "name": "next-cache"
    }
  ],
  "healthCheck": {
    "path": "/api/health",
    "port": 3000
  },
  "resources": {
    "cpu": 1,
    "memory": 2048
  },
  "deploy": {
    "clearCache": false,
    "restartService": true,
    "removeOldVersions": true,
    "removeSource": true
  }
} 